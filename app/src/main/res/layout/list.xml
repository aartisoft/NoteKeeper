<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/notecolor"


    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:weightSum="100"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/fav_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_fav"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:tint="#ff6700"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"


                />




        </RelativeLayout>



        <TextView
            android:ellipsize="marquee"

            android:id="@+id/titlelv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="49"
            android:text="Title"
            android:singleLine="true"
            android:textColor="#363434"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bolditalic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="49"
            android:id="@+id/descriptionlv"
            android:text="Description"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:layout_below="@id/titlelv"
            android:maxHeight="191dp"
            />


        <TextView
            android:id="@+id/dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="DateTime"
            android:textColor="#a9a9a9"

            >

        </TextView>






    </LinearLayout>

</androidx.cardview.widget.CardView>